<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f0eb">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="检查内容:"
                android:textColor="#000000"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:id="@+id/jcnr_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="sadfjklajdfkljsalkdjfsalkjdflkasjfkljaslkfjaslkjfklsajflkjaslkfj"
                android:textColor="@color/common_text_color"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="检查结果:"
                android:textColor="#000000"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:id="@+id/jcjg_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="sadfjklajdfkljsalkdjfsalkjdflkasjfkljaslkfjaslkjfklsajflkjaslkfj"
                android:textColor="@color/common_text_color"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="备注:"
                android:textColor="#000000"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:id="@+id/remark_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="dskajflkasjflkajslkfjsalkjflksajflksjalfkjaslkfjslkadjf"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="证据照片:"
                android:textColor="#000000"
                android:textSize="@dimen/common_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:visibility="invisible">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@color/btn_login_normal"
                    android:text="通过"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/btn_login_normal"
                    android:text="不通过"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/pic_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


</ScrollView>