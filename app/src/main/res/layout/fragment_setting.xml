<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_title_height"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:text="账号管理"
        android:textColor="@color/common_text_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/change_section_tv"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="环节切换"
            android:textColor="@color/common_text_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/model_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="模式切换"
            android:textColor="@color/common_text_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/download_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="下载企业基本信息数据"
            android:textColor="@color/common_text_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/update_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="上传离线监管数据"
            android:textColor="@color/common_text_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />


        <TextView
            android:id="@+id/exit_account_tv"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="退出当前账号"
            android:textColor="@color/common_text_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_title_height"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:text="个性设置"
        android:textColor="@color/common_text_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/cgx"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="草稿箱"
            android:textColor="@color/common_text_color"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/show_pic_tv"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="自动发送图片/手动发送图片"
            android:textColor="@color/common_text_color"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:visibility="gone" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="非wifi模式下无图显示"
            android:textColor="@color/common_text_color"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/clear_pic_tv"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="清除图片缓存"
            android:textColor="@color/common_text_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_title_height"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:text="关于"
        android:textColor="@color/common_text_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/about_us_tv"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="关于我们"
            android:textColor="@color/common_text_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/version_update"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@color/white"
            android:drawableRight="@drawable/img_insert_left"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:text="版本更新"
            android:textColor="@color/common_text_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />
    </LinearLayout>

</LinearLayout>