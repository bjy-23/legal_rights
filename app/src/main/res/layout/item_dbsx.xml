<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="16dp" >

    <LinearLayout
        android:id="@+id/select_layout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/select_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/unchoose" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="企业名称 :"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/qymc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="530100001"
                android:textColor="#3674cb"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="地址 :"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="匿名"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="检查月份:"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jcyf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="谷歌"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/gaozhiye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gaozhiye"
            android:textColor="@color/text_red"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/jcry_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="检查人员:"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jcry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="2014-11-23"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>
    </LinearLayout>



    <ImageView
        android:id="@+id/img_dispatch"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/dispatch" />

</LinearLayout>